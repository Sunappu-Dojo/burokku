[
    {
        "name": "Everything",
        "path": "public",
        "brotli": true
    },
    {
        "name": "HTML",
        "path": ["public/**/*.html"]
    },
    {
        "name": "CSS",
        "path": ["public/**/*.css"]
    },
    {
        "name": "JS",
        "path": ["public/**/*.js"]
    },
    {
        "name": "Fonts",
        "path": ["public/fonts/*.woff2"],
        "brotli": false
    },
    {
        "name": "Sounds (FLAC)",
        "path": ["public/sfx/*.flac"],
        "brotli": false
    },
    {
        "name": "Sounds (WAV)",
        "path": ["public/sfx/*.wav"],
        "brotli": false
    }
]
